<body onload="Profile();">
	<!-- Top Row -->
	<div class="row">
		<!-- User Details -->
		
		<div class="col-lg-4 col-md-4 col-sm-4">
			<p class="page-header text-center" id="userd">User Details</p>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12">
					<span class="glyphicon glyphicon-log-in"></span> Login Name(username): <strong><%= @logged_user.username %></strong>
					<hr>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12">
					<span class="glyphicon glyphicon-user"></span> Name: <strong><%= @logged_user.lastname %>, <%= @logged_user.firstname %></strong>
					<hr>
				</div>	
			</div>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12">
					<span class="glyphicon glyphicon-flash"></span> Privilege Level: <span class="badge"><strong> <%= @logged_user.user_role %></strong> </span>
					<hr>
				</div>	
			</div>			
		</div>

		<!-- Notifications & Reminders-->
		<div class="col-lg-8 col-md-8 col-sm-8">
			<p class="page-header text-center bg-warning">Notifications & Alerts</p>
		</div>

		<!-- Fix using Clear Fix -->
		<!--<div class="clearfix-xs clearfix-sm clearfix-md clearfix-lg"></div>-->
	</div>
	<hr>

	<!-- Main Row -->
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			Span 12
		</div>
	</div>
</body>
	
<style type="text/css">
	#profile_border {
		border: 1px solid grey;
	}
</style>

    <script type="text/javascript">
    function Profile() {
        // body...
        document.getElementById("userd").className = "bg-info";
    }
    </script>