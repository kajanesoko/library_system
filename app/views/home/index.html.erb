		<!-- Category i -->
		<div class="tab-content">
			<div class="tab-pane fade in active" id="item_category">
				<div class="table-responsive">
					<table class="table table-striped">
						<!--
						<caption>
							Item Table
						</caption>
						-->
						<thead class="bg-info">
							<tr>
								<th> Category</th>
								<th><span class="glyphicon glyphicon-book"></span> Title</th>
								<th><span class="glyphicon glyphicon-user"></span> Author</th>
								<th> Edition</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							<% @items.where(:void => 0).each do |item| %>
								<tr>

									<td><%= item.item_category_id %></td>
									<td><%= item.item_name %></td>
									<td><%= item.author %></td>
									<td><%= item.edition %></td>
									<% if @logged_user.user_role == 'Administrator' %>
										<!-- Admin actions to an item-->



										<td>
											<div class="btn-group">
												<button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#void_reason">
													<span class="glyphicon glyphicon-trash"></span> Delete
												</button>
												<button class="btn btn-sm btn-success">
													<span class="glyphicon glyphicon-edit"></span> Edit
												</button>
												<button class="btn btn-sm btn-warning">
													<span class="glyphicon glyphicon-thumbs-up"></span> Borrow
												</button>
											</div>
										</td>
									<% else %>
										<!-- Staff actions to an item -->
										<td>
											<div class="btn-group">
												<button class="btn btn-sm btn-primary">
													<span class="glyphicon glyphicon-eye-open"></span> Preview
												</button>
												<button class="btn btn-sm btn-success">
													<span class="glyphicon glyphicon-edit"></span> Borrow
												</button>
												<button class="btn btn-sm btn-warning">
													<span class="glyphicon glyphicon-calendar"></span> Book
												</button>
											</div>
										</td>
						      		<% end %>
								</tr>
							<% end %>

						</tbody>						
					</table>	
				</div>
			</div>
		</div>
											
	</div>

