<!DOCTYPE html>
<html>
<head>
	<title>Library Management System</title>
</head>
<body>
	<div>
		<!-- Items-->
		<div class="row">
			<div class="col">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#books" data-toggle="tab">Books</a></li>
					<li><a href="#cds" data-toggle="tab">CDs/DVDs</a></li>
					<li><a href="#journals" data-toggle="tab">Journals</a></li>
					<li><a href="#laptops" data-toggle="tab">Laptops</a></li>
				</ul>
				<table>
					<tr>
						<th>Item Name</th>
						<th>Item Category</th>
						<th>Item Description</th>
					</tr>
					<% @items.each do |item| %>
						<tr>
							<td><%= item.item_name %></td>
							<td><%= item.item_category %></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>

		<!-- Category i -->
		<div class="tab-content">
			<div class="tab-pane fade in active" id="books">
				<p>Hello Books</p>
			</div>
			<div class="tab-pane fade" id="cds">
				<p>Hello CDs/DVDs</p>
			</div>
			<div class="tab-pane fade" id="journals">
				<p>Hello Journals</p>
			</div>
			<div class="tab-pane fade" id="laptops">
				<p>Hello Laptops</p>
			</div>
		</div>
	</div>

</body>
</html>