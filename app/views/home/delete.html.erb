<h3 class="page-header"> Delete Item</h3>
<%= form_for(:Item, :url => {:controller => 'home', :action => 'void'}) do %>

  <div class="form-group">
    <%= label_tag("Item Name") %>
    <%= text_field_tag(:name, @item.item_name, :class => "form-control", ) %>
  </div>
  <div class="form-group">
    <%= label_tag("Author") %>
    <%= text_field_tag(:author, @item.author, :class => "form-control", ) %>
  </div>

  <div class="form-group">
    <%= label_tag("Edition") %>
    <%= text_field_tag(:edition, @item.edition, :class => "form-control",) %>
  </div>

	<div class="form-group">
		<%= label_tag("Void Reaon") %>
		<%= text_area_tag(:void_reason) %>
	</div>
  <input type="hidden" value="<%=@item.item_id%>" name="id">

  <%= submit_tag("Delete", :class => "btn btn-success") %>
<% end %>

